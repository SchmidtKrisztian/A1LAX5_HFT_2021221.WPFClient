<Window x:Class="MyLaptopShop.GUI.BrandAddOrEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLaptopShop.GUI"
        mc:Ignorable="d"
        Title="BrandAddOrEditWindow" Height="250" Width="200">
    <Grid>
        <StackPanel>
            <Label Content="Brand ID" Background="LightBlue"/>
            <TextBox/>
            <Label Content="Name" Background="LightBlue"/>
            <TextBox/>
            <Label Content="Foundation Year" Background="LightBlue"/>
            <DatePicker/>
            <Label Content="CEO Name" Background="LightBlue"/>
            <TextBox/>
            <Button Content="OK" Click="Button_Click" Padding="5"/>
        </StackPanel>

    </Grid>
</Window>
