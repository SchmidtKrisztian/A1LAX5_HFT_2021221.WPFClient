<Window x:Class="MyLaptopShop.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLaptopShop.WpfClient"
        xmlns:local2="clr-namespace:MyLaptopShop.WpfClient.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Choose the table you want to work with:" Padding="10" Background="LightBlue"/>
            <Button Content="Brand" Click="Button_Click" Padding="10"  Margin="10"/>
            <Button Content="Laptop" Click="Button_Click_1" Padding="10" Margin="10"/>
            <Button Content="Specification" Click="Button_Click_2" Padding="10"  Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
